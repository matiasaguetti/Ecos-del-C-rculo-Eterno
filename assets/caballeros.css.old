:root{
  --bg:#F7EBD9;
  --accent:#3B2F2F;
  --border:#7A5A3C;
  --muted:#555;
  --paper:#F2E6D4;
  --shadow:rgba(59,47,47,0.12);
  --serif: "Times New Roman", Times, serif;
}

/* Page wrapper (scoped) */
.caballeros {
  font-family: var(--serif);
  max-width: 1100px;
  margin: 28px auto;
  padding: 20px;
  color:#222;
  background: linear-gradient(180deg, #fbf6ee 0%, #f7efe0 100%);
  box-sizing: border-box;
  border-radius: 10px;
}

/* Tipograf√≠a ampliada */
.caballeros { font-size: 16px; }           /* base */
.caballeros .page-header h1 { font-size: 28px; margin:0; color:var(--accent); }
.caballeros .page-header .subtitle { font-size:14px; color:var(--muted); margin-top:6px; }

/* Cards grid */
.caballeros .cards {
  display:flex;
  flex-wrap:wrap;
  gap:20px;
  justify-content:space-between;
  margin-top:18px;
}

/* Card */
.caballeros .card {
  background: linear-gradient(180deg, var(--paper) 0%, #fdf7ee 100%);
  width: calc(50% - 10px);
  box-shadow: 0 8px 24px var(--shadow);
  border-radius:10px;
  border:2px solid var(--border);
  padding:14px;
  box-sizing:border-box;
  page-break-inside: avoid;
}

/* Card header */
.caballeros .card-head {
  background: var(--accent);
  color:#fff;
  padding:10px 12px;
  border-radius:8px;
  margin-bottom:10px;
}
.caballeros .card-head h2 { font-size:18px; margin:0; line-height:1.1; }
.caballeros .card-head .epitaph { font-size:12px; color:#f6eae4; margin:4px 0 0 0; font-style:italic; }

/* Body */
.caballeros .card-body p { margin:8px 0; line-height:1.35; font-size:14px; color:#222; }
.caballeros .card-body h3 { margin:8px 0 6px 0; font-size:15px; color:var(--accent); }

/* Mechanics box */
.caballeros .mechanics {
  background: rgba(250,245,240,0.9);
  padding:10px;
  border-radius:8px;
  border:1px solid rgba(120,90,60,0.12);
  font-size:14px;
}
.caballeros .uses { font-size:13px; color:var(--muted); margin-top:8px; }
.caballeros .flavor { margin-top:8px; font-size:13px; font-style:italic; color:#333; }

/* Footer */
.caballeros .page-footer { margin-top:20px; text-align:center; font-size:13px; color:var(--muted); }

/* Responsive */
@media (max-width:900px){
  .caballeros .cards { gap:12px; }
  .caballeros .card { width:100%; }
  .caballeros { padding:14px; }
  .caballeros .page-header h1 { font-size:22px; }
}

/* Print-friendly */
@media print{
  body { background: #fff; }
  .caballeros { box-shadow:none; border:none; background: #fff; max-width:100%; margin:0; padding:0; }
  .caballeros .card { break-inside: avoid; page-break-inside: avoid; }
}
